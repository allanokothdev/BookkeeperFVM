<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:paddingBottom="@dimen/padding_16"
        android:paddingTop="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16"
        android:paddingStart="@dimen/dimen_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                app:cardCornerRadius="@dimen/padding_8"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/placeholder"
                    android:id="@+id/imageView"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_toEndOf="@id/cardview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/subTextView"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:text="@string/app_name"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_centerVertical="true"
                android:text="@string/kes_3000"
                android:id="@+id/subItemTextView"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/decrementImageView"
                    android:scaleType="centerCrop"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_remove"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:id="@+id/incrementImageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/colorPrimary" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <View
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:drawablePadding="@dimen/dimen_5"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:drawableTint="@color/colorPrimary"
            android:drawableStart="@drawable/outline_article_24"
            android:layout_marginTop="8dp"
            android:hint="@string/enter_sale_summary"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/colorBlack"
            android:imeOptions="actionDone"
            android:inputType="textShortMessage"
            android:fontFamily="@font/open_sans_semibold"
            android:id="@+id/summaryTextInputEditText"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_chat_container"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingStart="@dimen/dimen_10"
            android:minHeight="@dimen/dimen_60"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="16dp"
            android:text="@string/select_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/spinner"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_chat_container"
            android:entries="@array/payments" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/dimen_24"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@drawable/primary_background_button"
            android:textColor="@color/colorWhite"
            android:text="@string/publish"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:visibility="gone"
            android:layout_margin="@dimen/dimen_24"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorName="BallPulseIndicator" />
    </LinearLayout>


</LinearLayout>